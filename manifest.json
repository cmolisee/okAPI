{
    "name": "okAPI",
    "version": "0.0.0",
    "description": "Google Chrome browser extension for mocking and manipulating API's.",
    "manifest_version": 3,
    "action": {
        "default_popup": "./src/index.html",
        "default_title": "okAPI"
    },
    "options_ui": {
        "page": "./src/index.html"
    },
    "icons": {
        "16": "",
        "32": "",
        "64": "",
        "96": ""
    },
    "background": {
        "service_worker": ""
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [""]
        }
    ],
    "devtools_page": "./src/index.html",
    "permissions": ["tabs", "activeTab"]
}